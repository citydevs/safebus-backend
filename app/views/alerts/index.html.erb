<h1>Listing alerts</h1>

<div id='map' class='dark'></div>


<table>
  <thead>
    <tr>
      <th>Tipo</th>
      <th>Latitud</th>
      <th>Longitud</th>
      <th>Cliente</th>
      <th>Tipo de acoso</th>
      <th>Hora de alerta</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <% if alert.alert_type == 1 %>
          <td>Yo</td>
        <% else %>
          <td>Alguien m√°s</td>
        <% end %>
        <td><%= alert.latitude %></td>
        <td><%= alert.longitude %></td>
        <td><%= alert.email %></td>
        <td><%= alert.harrasment_type %></td>
        <td><%= alert.created_at.localtime %></td>
        <td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

