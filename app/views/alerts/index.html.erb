<h1>Listing alerts</h1>

<div id='map' class='dark'></div>


<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th>Client</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alerts.each do |alert| %>
      <tr>
        <% if alert.alert_type == 1 %>
          <td>Yo</td>
        <% else %>
          <td>Alguien m√°s</td>
        <% end %>
        <td><%= alert.latitude %></td>
        <td><%= alert.longitude %></td>
        <td><%= alert.email %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Alert', new_alert_path %>
